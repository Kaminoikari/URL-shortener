{{!-- title --}}
<div class="title container mx-auto">
  <header>
    <div id="logo"><a href="./" class="logo">URL Shortener</a>
    </div>
</header>

  <img class="mt-5" src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
    alt="">
</div>


{{!-- Input url --}}
<div class="input mx-auto">
  <form action="/" method="post">
    <div class="input-group">
      <input type="url" class="form-control" placeholder="Input URL here" name="inputUrl" required value="{{inputUrl}}">
      <button class="btn btn-outline-success" type="submit">Shorten URL</button>
    </div>
  </form>


  {{!-- New url --}}
  {{#if name}}
  <div class="result mt-4">
    <p class="px-auto mb-0 text-primary">Success! Please use this link!</p>
    <div class="alert alert-info mt-2 d-flex align-item-center justify-content-between " role="alert">
      <span class="align-middle p-0  d-flex align-items-center" id="shorten-url">
        {{origin}}/{{name}}
      </span>
      <button class="copy-btn btn btn-outline-info btn-sm " onclick="onClickCopy()">copy</button>
    </div>
  </div>
  <script>
    function onClickCopy() {
      const shortenUrl = document.querySelector('#shorten-url').innerText
      navigator.clipboard.writeText(shortenUrl)
      swal({
        icon: 'success',
        title: 'Great!',
        text: 'The URL has been copied!'
        })
    }
  </script>

  {{/if}}

</div>
